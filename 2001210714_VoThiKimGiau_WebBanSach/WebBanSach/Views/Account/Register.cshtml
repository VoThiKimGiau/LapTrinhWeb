@model WebBanSach.ViewModel.RegisterVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Register</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-5">
            @Html.LabelFor(t => t.UserName)
            @Html.TextBoxFor(t => t.UserName, new { placehoder = "UserName", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.UserName)
        </div>
        <div class="col-md-5">
            @Html.LabelFor(t => t.Email)
            @Html.TextBoxFor(t => t.Email, new { placehoder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.Email)
        </div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-5">
            @Html.LabelFor(t => t.Password)
            @Html.PasswordFor(t => t.Password, new { placehoder = "Password", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.Password)
        </div>
        <div class="col-md-5">
            @Html.LabelFor(t => t.ConfirmPassword)
            @Html.PasswordFor(t => t.ConfirmPassword, new { placehoder = "Confirm Password", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.ConfirmPassword)
        </div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-5">
            @Html.LabelFor(t => t.PhoneNumber)
            @Html.TextBoxFor(t => t.PhoneNumber, new { placehoder = "PhoneNumber", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.PhoneNumber)
        </div>
        <div class="col-md-5">
            @Html.LabelFor(t => t.DateOfBirth)
            @Html.TextBoxFor(t => t.DateOfBirth, new { placehoder = "Date Of Birth", @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(t => t.DateOfBirth)
        </div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-5">
            @Html.LabelFor(t => t.Address)
            @Html.TextBoxFor(t => t.Address, new { placehoder = "Address", @class = "form-control" })
            @Html.ValidationMessageFor(t => t.Address)
        </div>
    </div>
    <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-3">
            <a href="/Home" class="btn btn-outline-danger w-25 mt-3">Cancel</a>
            <button type="submit" class="btn btn-outline-primary text-center w-25 mt-3 ms-2">Send</button>
        </div>
    </div>
}

